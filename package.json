    "mkdirp": "^0.5.1",
    "uuid": "^3.0.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dadi/api-filestore.git"
  },
  "devDependencies": {
    "@dadi/eslint-config": "^1.0.0",
    "@dadi/prettier-config": "^1.0.0",
    "colors": "^1.1.2",
    "coveralls": "^3.0.1",
    "env-test": "^1.0.0",
    "eslint": "^5.16.0",
    "husky": "^2.4.1",
    "js-promise-queue": "^1.1.0",
    "lint-staged": "^13.1.0",
    "mocha": "^5.2.0",
    "nyc": "^14.1.0",
    "prettier": "^1.18.2",
    "should": "~4.0.4",
    "sinon": "~1.17.6"
  },
  "husky": {
